<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group">
 <p> Name: </p>

   <%= f.text_field :name %>
  </div>

  <div class="form-group">
   <p>Email:</p>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <p>Password: </p>
    <%= f.password_field :password %>
  </div>
  <div class="form-group">
    <p>Password Confirmation: </p>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit "Submit", class: 'btn btn-primary' %>

<% end %>